@import 'nib'

/** Let us choose the styles, not the browser! **/
/** Reset padding and margins that the browser gives to elements as well as annoying list styles etc. **/
*
  reset-box-model()


html, body
  height: 100%;


body
  background:#0078CD
  background: linear-gradient(top, #2989d8 0%, #1a7fb2 58%, #2066a0 100%);
  min-height: 100%;


display-box()
  display: -webkit-box
  display: -moz-box
  display: box

vertical-text()
  writing-mode:tb-rl;
  -webkit-transform:rotate(90deg);
  -moz-transform:rotate(90deg);
  -o-transform: rotate(90deg);
  white-space:nowrap;


div#container
  margin: 0 auto
  width: 80%
  max-width: 1200px;
  min-height: 100%;



/*************************************************************/
/*********************    GOAL       *************************/
/******* styles for the goal dice and challenge buttons ******/
/*************************************************************/

$font-list = "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif

div#goal
  background: #0078CD
  border-radius(5px)
  margin-bottom: 30px
  padding: 10px 10px

  display: block
  position: relative
  text-align: center

div#goal-text
  position: absolute
  width: 100%
  text-align: center
  top: -30px
  text-transform: uppercase
  font-family: $font-list
  font-size: 42px

div#goal-text span
  background: #EEE
  border-radius(5px)
  padding: 10px

#goal > ul > li.goal-dice
  display: inline-block
  text-align: center
  font-family: $font-list
  font-size: 32px
  font-weight: bold
  width: 40px
  height: 40px
  background: #BBB
  padding-top: 5px

div#now-never-text
  position: absolute
  width: 100%
  text-align: center
  bottom: -20px

span#now-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow: 0 1px 0 #fff
  display: inline-block
  width: 150px

span#now-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

span#now-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000

div#never-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow(0 1px 0 #fff)
  width: 150px

div#never-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

div#never-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000








/* For each mat, tell the inner container about dice layout properties */
mats = required-mat-inner, optional-mat-inner, forbidden-mat-inner, unallocated
for m in mats
  div#{m} ul
    text-align: left
    margin: 0px 10px 0px 20px
    li.dice:before
      content: ' '
      margin: 5px
    li.dice 
      margin-right: -5px
      border: 4px solid red
      display: inline-block
      text-align: center
      background: #CCC
      width: $dicewidth = 30px
      height: $dicewidth
      
      span
        font-family: $font-list
        font-size: 20px
        padding-top: 4px;
        line-height: $dicewidth;


div#unallocated
  display: block
  width: 100%
  background: #0066AD
  padding-top: 10px;
  padding-bottom: 10px;
  border-radius(5px)
  text-align: left
  ul
    display: inline
  ul#required li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    border-color:#007BD1
    background: #EC6A00
    border-width: 8px
  ul#optional li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    border-color:#007BD1
    background: #4FBA07
    border-width: 8px
  ul#resources li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    border-color:#007BD1
    background: #777777
    border-width: 8px


#dice_container
  margin 0px 30px 0px 10px







#testspan ul li.dice
  border-color: blue
 

#testspan2 ul li.dice
  border-color: blue




// Box Flex Parent
div#mats-flexbox-container
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  margin-bottom: 10px


div#required-mat-outer,
div#optional-mat-outer,
div#forbidden-mat-outer
  box-flex(1)
  background: #0066AD
  width: 0px
  border-right: 2px solid #00518A;
  //box-shadow(inset 0 0 1px 1px #f6f6f6)


div#required-mat-outer
  border-radius(5px 0px 0px 5px)
div#forbidden-mat-outer
  border-radius(5px 0px 0px 5px)



// Style the headers for the text in the mats
#mats-flexbox-container div.mat h3
  font-family: $font-list
  color: #FFFFFF
  font-size: 13px
  letter-spacing: 1px
  text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
  margin-left: 5px
  margin-top: 5px
  padding: 5px




a.mini-button
  background: #007DD5
  font: bold 12px/1 $font-list
  padding: 1px
  margin: 1px
  display: inline-block
  border: 1px solid #51B7FF
  border-radius(2px)
  span
    border: 1px solid #006680
    color: #FFFFFF
    padding: 3px 7px 
    display: inline-block
    border-radius(2px)
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px





ul#main-columns
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  padding: 0
  margin: 0

ul#main-columns li
  box-flex(1)
  background: #007DD5
  list-style: none
  margin: 5px
  width 0;

#answer-area-container
  #answer-area-toolbar ul
    float:left
    reset-box-model()
    li 
      background: #AAA
      float: left
      clear: left
      display: inline-block
      width: 20px

      
#player-list ul
  reset-box-model()
  li
    background: #CCC;


#rough-area-board 
  display: block;
  height: 100px;
  margin: 10px;
  background: #fff;

.glow
  transition(box-shadow 0.5s)
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));

#forbidden.glow
  box-shadow(0px 0px 8px 2px rgba(0, 255, 0, .75));

#required.glow
  box-shadow(0px 0px 8px 2px rgba(0, 0, 255, .75));

#optional.glow
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));