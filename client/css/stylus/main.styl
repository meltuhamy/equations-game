@import 'nib'


.clearfix
  clearfix()

display-box()
  display: -webkit-box
  display: -moz-box
  display: box

vertical-text()
  writing-mode:tb-rl;
  -webkit-transform:rotate(90deg);
  -moz-transform:rotate(90deg);
  -o-transform: rotate(90deg);
  white-space:nowrap;


div#container
  margin: 0 auto
  width: 80%
  max-width: 1200px;

div#goal
  background: #EEE
  border-radius(5px)
  margin-bottom: 30px
  padding: 10px 10px

  display: block
  position: relative
  text-align: center

div#goal-text
  position: absolute
  width: 100%
  text-align: center
  top: -30px
  text-transform: uppercase
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  font-size: 42px

div#goal-text span
  background: #EEE
  border-radius(5px)
  padding: 10px

#goal > ul > li.goal-dice
  display: inline-block
  text-align: center
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  font-size: 32px
  font-weight: bold
  width: 40px
  height: 40px
  background: #BBB
  padding-top: 5px

div#now-never-text
  position: absolute
  width: 100%
  text-align: center
  bottom: -20px

span#now-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow: 0 1px 0 #fff
  display: inline-block
  width: 150px

span#now-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

span#now-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000

div#never-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow(0 1px 0 #fff)
  width: 150px

div#never-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

div#never-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000

div#unallocated
  display: block
  width: 100%
  background: #EEE
  border-radius(5px)
  margin-bottom: 10px
  padding: 10px 0px

div#unallocated ul
  list-style: none
  padding: 0
  margin: 0

div#unallocated ul li
  margin-left: 10px

div#unallocated ul li.dice:first-child
  margin-left: 10px

div#container li.dice
  float: left
  text-align: center
  background: #CCC
  display: table
  width: 30px
  height: 30px

div#container li.dice span
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  font-size: 22px
  font-weight: bold
  vertical-align: middle
  display: table-cell

div#mats-flexbox-container
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  margin-bottom: 10px

div#mats-flexbox-container > div.mat
  box-flex(1)
  margin-left: 5px
  margin-right: 5px
  padding-right: 10px
  padding-bottom: 10px
  border-radius(5px)
  background: #999
  width: 0px

#mats-flexbox-container > div.mat ul
  list-style: none
  padding: 0
  margin: 0

#mats-flexbox-container > div.mat > ul > li.dice
  margin: 10px 0 0 10px

ul#main-columns
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  padding: 0
  margin: 0

ul#main-columns li
  box-flex(1)
  background: #DDD
  list-style: none
  margin: 5px
  width 0;

#answer-area-container
  #answer-area-toolbar ul
    float:left
    reset-box-model()
    li 
      background: #AAA
      float: left
      clear: left
      display: inline-block
      width: 20px

      
#player-list ul
  reset-box-model()
  li
    background: #CCC;


#rough-area-board 
  display: block;
  height: 100px;
  margin: 10px;
  background: #fff;

.glow
  transition(box-shadow 0.5s)
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));

#forbidden.glow

  box-shadow(0px 0px 8px 2px rgba(0, 255, 0, .75));

#required.glow
  box-shadow(0px 0px 8px 2px rgba(0, 0, 255, .75));

#optional.glow
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));