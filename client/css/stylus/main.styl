    background: #4FBA07
    border-width: 8px
  ul#forbidden li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    border-color:#007BD1
    background: red
    border-width: 8px
  ul#unallocated li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    border-color:#007BD1
    background: #777777
    border-width: 8px

div#lobby
  background: #0066AD
  border-radius(5px)
  display: block
  padding: 10px
