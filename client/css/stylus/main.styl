@import 'nib'

/** Let us choose the styles, not the browser! **/
/** Reset padding and margins that the browser gives to elements as well as annoying list styles etc. **/
*
  reset-box-model()



display-box()
  display: -webkit-box
  display: -moz-box
  display: box

vertical-text()
  writing-mode:tb-rl;
  -webkit-transform:rotate(90deg);
  -moz-transform:rotate(90deg);
  -o-transform: rotate(90deg);
  white-space:nowrap;


div#container
  margin: 0 auto
  width: 80%
  max-width: 1200px;


/*************************************************************/
/*********************    GOAL       *************************/
/******* styles for the goal dice and challenge buttons ******/
/*************************************************************/

div#goal
  background: #EEE
  border-radius(5px)
  margin-bottom: 30px
  padding: 10px 10px

  display: block
  position: relative
  text-align: center

div#goal-text
  position: absolute
  width: 100%
  text-align: center
  top: -30px
  text-transform: uppercase
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  font-size: 42px

div#goal-text span
  background: #EEE
  border-radius(5px)
  padding: 10px

#goal > ul > li.goal-dice
  display: inline-block
  text-align: center
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  font-size: 32px
  font-weight: bold
  width: 40px
  height: 40px
  background: #BBB
  padding-top: 5px

div#now-never-text
  position: absolute
  width: 100%
  text-align: center
  bottom: -20px

span#now-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow: 0 1px 0 #fff
  display: inline-block
  width: 150px

span#now-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

span#now-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000

div#never-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 "helvetica neue", helvetica, arial, sans-serif
  padding: 8px 0 9px
  text-align: center
  text-shadow(0 1px 0 #fff)
  width: 150px

div#never-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

div#never-button:active
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000





div#unallocated
  display: block
  width: 100%
  background: #EEE
  padding-top: 10px;
  border-radius(5px)
  text-align: center
  margin-bottom: 10px // separate unallocated box from the mats


/* For each mat, tell them about dice layout properties */
mats = required-mat, optional-mat, forbidden-mat, unallocated
for m in mats
  div#{m} ul
    text-align: left
    margin: 0px 0px 0px 10px
    > li.dice 
      margin-right: 10px
      margin-bottom: 10px
      display: inline-block
      text-align: center
      background: #CCC
      width: $dicewidth = 30px
      height: $dicewidth
      > span
        font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
        font-size: 20px
        padding-top: 4px;
        line-height: $dicewidth;







div#mats-flexbox-container
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  margin-bottom: 10px

div#mats-flexbox-container > div.mat
  box-flex(1)
  margin-left: 10px
  border-radius(5px)
  background: #999
  width: 0px
div#mats-flexbox-container > div.mat:first-child
  margin-left: 0px



div#mats-flexbox-container > div#optional-mat
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  background: linear-gradient(top, #2989d8 0%, #1a7fb2 78%, #2066a0 100%);
  border: 1px solid #000000


 


// Style the headers for the text in the mats
#mats-flexbox-container > div.mat > h3
  font-family: "Helvetica Neue","Hevletica","Arial","DejaVu Sans","Kozuka Gothic Pro R","Meiryo","MS Gothic","Osaka",sans-serif
  text-transform: uppercase
  color: #000000
  font-size: 17px
  letter-spacing: 1px
  reset-box-model()






ul#main-columns
  width: 100%
  display-box()
  box-orient(horizontal)
  flex-wrap(wrap)
  flex-direction(row)
  padding: 0
  margin: 0

ul#main-columns li
  box-flex(1)
  background: #DDD
  list-style: none
  margin: 5px
  width 0;

#answer-area-container
  #answer-area-toolbar ul
    float:left
    reset-box-model()
    li 
      background: #AAA
      float: left
      clear: left
      display: inline-block
      width: 20px

      
#player-list ul
  reset-box-model()
  li
    background: #CCC;


#rough-area-board 
  display: block;
  height: 100px;
  margin: 10px;
  background: #fff;

.glow
  transition(box-shadow 0.5s)
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));

#forbidden.glow
  box-shadow(0px 0px 8px 2px rgba(0, 255, 0, .75));

#required.glow
  box-shadow(0px 0px 8px 2px rgba(0, 0, 255, .75));

#optional.glow
  box-shadow(0px 0px 8px 2px rgba(255, 0, 0, .75));