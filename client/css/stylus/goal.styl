// ******************************************************
// Styles for the goal screen and the goal waiting screen
// ******************************************************

@import 'main'
// -----------

$dicewidth = 30px

div#goalmake,
div#goalwait
  background: #005896
  border-radius(5px)
  padding: 20px
  h2
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    
  p
    color: #7D879B

div#goalmake
  h2
    margin-bottom: 0px
  p
    margin-bottom: 10px


div#goalwait h2
  margin-bottom: 5px


div#allocation_container ul,
ul#answers,
ul#added-goal,
ul#notadded-goal
  display: inline-block
  text-align: center
  li.dice 
    margin-right: -5px
    border: 4px solid red
    display: inline-block
    text-align: center
    background: #CCC
    width: $dicewidth
    height: $dicewidth
    cursor: pointer
    span
      font-family: $font-list
      font-size: 20px
      padding-top: 4px;
      line-height: $dicewidth;

  li.dot
    font-size: 35px
    color: #F8C627
    font-weight: bold
    display: inline-block
    text-shadow: rgba(0, 0, 0, 0.3) 0px 2px 0px
    width: 15px
    height: 30px
    line-height: 16px
    margin-left: 5px
    border: 8px solid transparent

  li.dot[data-bracket='none'] span:after
    content: '.'

  li.dot[data-bracket='left'] span:after
    content: '('

  li.dot[data-bracket='right'] span:after
    content: ')'


div#notadded-goal-ctnr
  ul#notadded-goal 
    float:left
    li.dice
      color: #FFFFFF
      text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
      border-color:#005E9B
      background: #777777
      border-width: 7px 14px
    
div#added-goal-ctnr
  ul#added-goal 
    float:left
    li.dice
      color: #FFFFFF
      text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
      border-color:#005E9B
      background: #777777
  
div#added-goal-ctnr,
div#notadded-goal-ctnr
  margin-bottom: 15px
  padding: $tbpadding=10px 20px
  background: #004E81
  border-radius(5px) 
  clearfix()
  h3
    float: left
    margin: 10px
    color: #4884AC
    text-shadow: rgba(0, 0, 0, 0.5) 0px 1px 0px



button#sendgoal
  padding: 7px 30px
  border-color:#007BD1
  color: #FFFFFF
  background: #007BD1
  text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
  font-weight: bold
  border-radius(5px)
  cursor: pointer

button#sendgoal:hover
  background: #2FA9FF