#challenge-agree-btn
  margin-left: 10px
  


/*************************************************************/
/*********************  ANSWER AREA    ***********************/
/***** styles for the rough answer area + the dice inside ****/
/*************************************************************/

#answer-area-container
  #answer-area-toolbar ul
    float:left
    reset-box-model()
    li 
      background: #AAA
      float: left
      clear: left
      display: inline-block
      width: 20px

div#answer-area
  padding-top: 1px
  width:100%
  div#answer-dice
    border: 2px dotted rgba(0, 0, 0, 0.25)
    margin: 10px
    min-height: 100px
    padding-left: 10px


ul#answers 
  margin-left: -5px
  li.dice
    color: #FFFFFF
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
    diceLayout(30px)
    background: #777777
    cursor: pointer
  li.dice[data-alloc='unallocated']
    background: #777777
  li.dice[data-alloc='required']
    background: #EC6A00
  li.dice[data-alloc='optional']
    background: #4FBA07
  li.dice[data-alloc='forbidden']
    background: red

li.dice[data-alloc='forbidden']
    background: red


li.answer-dice-notice
  color: #002677
  font-size: 13px

