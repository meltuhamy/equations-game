// ******************************************************
// Styles for the main game screen
// ******************************************************

@import 'main'
// -----------


/*************************************************************/
/*********************    GOAL       *************************/
/******* styles for the goal dice and challenge buttons ******/
/*************************************************************/



div#top-ctnr
  text-align: center
  background: #0066AD
  padding: 10px 0px
  margin-bottom: 10px
  border-radius(5px)
  clearfix()
  div#goal-ctnr
    background: #0078CD
    border-radius(5px)
    margin-left: 10px
    margin-right: 10px
    margin-bottom: 10px
    padding: 10px 10px
    float:left
    ul#goal-dice-ctnr
      display: block
      margin-bottom: 10px
      li.dice
        display: inline-block
        text-align: center
        font-family: $font-list
        font-size: 25px
        margin-right: 5px
        font-weight: bold
        background: #FFC818
        border-radius(5px)
        width: $dicewidth = 35px
        height: $dicewidth
        span
          color: #BE6B00
          text-shadow: rgba(0, 0, 0, .15) 0px 1px 0px
          line-height: $dicewidth;
  div#now-never-ctnr
    text-align: center
    float:left
  div#player-list 
    float: left
    background: #0078CD
    border-radius(5px)
    margin-left: 10px
    margin-right: 10px
    padding: 10px 10px
    position: relative
    ul
      li
        color: #9DC8FF
        background: transparent url('../img/user-blue.png') no-repeat center 5px
        background-color: $notTurnCol = #0090F0
        display: inline-block
        padding: 40px 10px 5px 10px
        border-radius(5px)
        font-size: 13px
        font-weight: bold
        margin-right: 10px
        min-width: 35px
        /*text-shadow: rgba(0, 0, 0, 0.2) 0px 1px 1px*/
        box-shadow: rgba(0, 0, 0, 0.2) 0px 1px 1px;
      li.current-turn-player
        color: #FFF4D0
        background-color: $isTurnCol = #D88A00
        background-image: url('../img/user-yellow.png') 
        /*text-shadow: #FFD600 0px 1px 3px*/
        /*box-shadow: #FFD600 0px 1px 1px*/
      li span.challenge-tag
        background: rgba(122, 79, 62, 0.53)
        padding: 2px 5px
        border-radius: 3px
        line-height: 22px

  div#timer-ctnr
    float: left
    background: #0078CD
    border-radius(5px)
    padding: 10px 10px

  div#timer-knob-ctnr
    float:left

  div#timer-text-ctnr
    float:left
    width: 100%
    clear: left
    margin-top: -38px
    text-align: center
    font-size: 13px
    color: #3BA6E2
    font-weight: bold

  /* Add an arrow connecting player list to the commentary box */
  div#player-list:after 
    left: 100%
    border: solid transparent
    content: " "
    content: " "
    height: 0
    width: 0
    position: absolute
    pointer-events: none
    float: left
    border-left-color: #0078CD
    border-width: $playerListArrowSize = 10px
    top: 50%
    margin-top: -1 * $playerListArrowSize


  div#commentary_ctnr
    float:left
    background: #0078CD
    width: 500px
    border-radius(5px)
    padding-bottom: 5px
    ul li
      color: #BEBEBE
      text-align: left
      font-size: 12px
      padding: 0px 10px
      span
        color: #9FC6F1
    ul li.now-commentary
      color: #FFFFFF
      background: #00A3FF
      border-radius(5px 5px 0px 0px)
      span
        color: #F5FF00
        font-weight: bold
        padding-right: 5px     
  

a.mini-button
  cursor: pointer
  background: #007DD5
  font: bold 13px/1 $font-list
  padding: 1px
  margin: 1px
  display: inline-block
  border-radius(2px)
  span
    border: 1px solid #279AE0
    color: #FFFFFF
    padding: 7px 27px 
    display: inline-block
    border-radius(2px)
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px
a.mini-button:first-child
  margin-left: 10px

span#now-button,
span#never-button,
span#challenge-agree-btn,
span#challenge-disagree-btn,
span.grey-button,
button.grey-button
  background: #e3e3e3
  border: 1px solid #bbb
  border-radius(3px)
  box-shadow(inset 0 0 1px 1px #f6f6f6)
  color: #333
  font: bold 12px/1 $font-list
  padding: 5px 18px
  text-align: center
  text-shadow: 0 1px 0 #fff
  display: inline-block

span#now-button:hover,
span#never-button:hover,
span#challenge-agree-btn:hover,
span#challenge-disagree-btn:hover,
span.grey-button:hover,
button.grey-button:hover
  background: #d9d9d9
  box-shadow(inset 0 0 1px 1px #eaeaea)
  color: #222
  cursor: pointer

span#now-button:active,
span#never-button:active,
span#challenge-agree-btn:active,
span#challenge-disagree-btn:active,
span.grey-button:hover,
button.grey-button:hover
  background: #d0d0d0
  box-shadow(inset 0 0 1px 1px #e3e3e3)
  color: #000


span#challenge-title
  color: white
  text-shadow: rgba(0, 0, 0, 0.5) 0px 1px 0px
  font-weight: bold
  background: #004E81
  padding: 4px 32px
  border-radius(3px)


/*************************************************************/
/********************  ALLOCATIONS    ************************/
/******** styles for the mats and dice and in the mats *******/
/*************************************************************/


div#allocation_container
  display: block
  background: #0066AD
  padding-top: 10px;
  padding-bottom: 10px;
  border-radius(5px 5px 0px 0px)
  text-align: left

  #dice_container
    margin 0px 20px 0px 20px

  ul
    display: inline-block
    text-align: center
    li.dice 
      background: #CCC
      diceBubble(30px, #777777, 5px)
      cursor: pointer
      span
        font-family: $font-list
        font-size: 20px
        padding-top: 4px;

  ul#required,
  ul#optional,
  ul#unallocated
    margin-right: 5px

  ul#required li.dice
    background: #EC6A00
  ul#optional li.dice
    background: #4FBA07
  ul#forbidden li.dice
    background: red
  ul#unallocated li.dice
    background: #777777

  ul#required li.dice[data-usedinans="true"],
  ul#optional li.dice[data-usedinans="true"],
  ul#forbidden li.dice[data-usedinans="true"],
  ul#unallocated li.dice[data-usedinans="true"]
    box-shadow: rgba(0, 0, 0, 0.32) 0px -1px 9px 1px inset

  ul#required li.dice[data-anshover="on"],
  ul#optional li.dice[data-anshover="on"],
  ul#forbidden li.dice[data-anshover="on"],
  ul#unallocated li.dice[data-anshover="on"],
  ul#answers li.dice:hover
    box-shadow: rgba(255, 255, 255, 0.32) 0px -1px 9px 1px inset

  

  ul#required li.dice
  ul#optional li.dice
  ul#forbidden li.dice
  ul#unallocated li.dice
    color: #FFFFFF
    border-color:#007BD1
    opacity:1.0
    border-width: 8px
    text-shadow: rgba(0, 0, 0, .75) 0px 1px 0px



