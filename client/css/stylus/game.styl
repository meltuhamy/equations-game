/*************************************************************/
/******************  TURN NOTIFICATION    ********************/
/*************************************************************/

#turn-notification 
  display: block
  background: #0090F0
  border-radius(0px 0px 5px 5px)
  margin-bottom: 10px
  p
    text-align: left
    margin-left 20px
    padding: 4px 0
    color: white
    font-size: 13px
    text-shadow: rgba(0, 0, 0, 0.5) 0px 1px 0px;

#turn-notification[data-attention="on"]
  background: #D88A00

div#allocation_container[data-attention="on"] 
  ul#unallocated li.dice,
    border-color: #D88A00

